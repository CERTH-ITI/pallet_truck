<?xml version="1.0"?>
<launch>

  <arg name="sim" default="false"/>
  <arg name="cmd_vel" default="robotnik_base_control/cmd_vel"/>
  <arg name="prefix" default="hr_recycler_"/>
  <arg name="id_robot" default="hr_recycler"/>
  <arg name="launch_robot_localization" default="false"/>
  <arg name="has_elevator" default="false"/>

	<!-- Load joint controller configurations from YAML file to parameter server -->
	<rosparam file="$(find hr_recycler_control)/config/hr_recycler_control.yaml" command="load"/>
  
	<!-- load the controllers -->
	<node name="controller_spawner" pkg="controller_manager" type="spawner" respawn="false"
		output="screen" args="
		                    mobile_controller
                        elevator_controller
						            joint_read_state_controller
						  --shutdown-timeout 1
						  ">
	</node>

</launch>
