<?xml version="1.0"?>
<launch>
  
  <arg name="robot_id" default="$(optenv ROBOT_ID robot)"/>
  <arg name="prefix" default="$(arg robot_id)_"/>
  <!-- maps inside the folder pallet_truck_navigation/maps -->
  <arg name="map_file" default="map1/map1.yaml"/>
  <arg name="frame_id" default="$(arg prefix)map"/>

  <!-- Run the map server -->
  <node name="map_server" pkg="map_server" type="map_server" args="$(find pallet_truck_localization)/maps/$(arg map_file)">
    <param name="frame_id" value="$(arg frame_id)"/>
  </node>

</launch>
