<?xml version="1.0"?>
<launch>
  <arg name="id_robot" default="pallet_truck"/>
  <arg name="prefix" default="$(arg id_robot)_"/>

  <arg name="overwrite_frames" default="false" />
  <arg name="odom_frame" default="$(arg prefix)odom"/>
  <arg name="base_frame" default="$(arg prefix)base_footprint"/>

  <!-- Topics argumments -->
  <arg name="cmd_vel_topic" default="move_base/cmd_vel"/>
  <arg name="odom_topic" default="robotnik_base_control/odom"/>

  <arg name="config_folder" default="$(find pallet_truck_navigation)/config" />

  <arg name="costmap_common_params" default="costmap_common_params.yaml" />
  <arg name="global_costmap_params" default="global_costmap_params_nomap.yaml" />
  <arg name="local_costmap_params" default="local_costmap_params.yaml" />
  <arg name="global_planner_params" default="global_planner_params.yaml" />
  <arg name="local_planner_params" default="teb_local_planner_diff_params.yaml" />

  <arg name="front_scan_topic" default="$(optenv ROBOT_NAVIGATION_FRONT_2D_SCAN front_laser/filtered_scan)"/>
  <arg name="rear_scan_topic" default="$(optenv ROBOT_NAVIGATION_REAR_2D_SCAN rear_laser/scan)"/>
  <arg name="front_rgbd_to_scan_topic" default="$(optenv ROBOT_NAVIGATION_FRONT_RGBD_TO_SCAN front_rgbd_camera/point_cloud_scan_filtered)"/>

  <!-- Run move_base -->
  <node pkg="move_base" type="move_base" respawn="false" name="move_base" output="screen">
    <remap from="cmd_vel" to="$(arg cmd_vel_topic)" />
	<remap from="odom" to="$(arg odom_topic)" />

	<!-- Move base params -->
	<rosparam file="$(arg config_folder)/move_base_params.yaml" command="load" subst_value="true"/>

	<!-- Global costmap params-->
	<rosparam file="$(arg config_folder)/costmaps/$(arg costmap_common_params)" command="load" ns="global_costmap" subst_value="true"/>
	<rosparam file="$(arg config_folder)/costmaps/$(arg global_costmap_params)" command="load" subst_value="true"/>

	<!-- Local costmap params-->
	<rosparam file="$(arg config_folder)/costmaps/$(arg costmap_common_params)" command="load" ns="local_costmap" subst_value="true"/>
	<rosparam file="$(arg config_folder)/costmaps/$(arg local_costmap_params)" command="load" subst_value="true"/>

	<!-- Global planner params-->
	<rosparam file="$(arg config_folder)/global_planners/$(arg global_planner_params)" command="load" subst_value="true"/>
	<!-- Local planner params-->
	<rosparam file="$(arg config_folder)/local_planners/$(arg local_planner_params)" command="load" subst_value="true"/>

  </node>

</launch>
