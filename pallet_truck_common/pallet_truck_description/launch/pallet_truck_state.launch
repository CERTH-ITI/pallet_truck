<?xml version="1.0"?>
<launch>
  <arg name="id_robot" default="$(optenv ROBOT_ID pallet_truck)"/>
  <arg name="prefix" default="$(arg id_robot)_"/>
  <arg name="version" default="pallet_truck_std.urdf.xacro" />

  <param name="robot_description" command="$(find xacro)/xacro '$(find pallet_truck_description)/robots/$(arg version)' id_robot:=$(arg id_robot) prefix:=$(arg prefix)" />

  <!-- publish tfs through the robot_state_publisher -->
  <node name="robot_state_publisher" pkg="robot_state_publisher" type="robot_state_publisher" >
    <remap from="/joint_states" to="joint_states" />
  </node>

</launch>

